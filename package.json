{
  "name": "schematic",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "yarn test:types && yarn lint",
    "test:types": "tsc --noEmit --project tsconfig.json",
    "lint": "yarn eslint . --ext .js,.jsx,.ts,.tsx --max-warnings 0",
    "build-release": "rm -rf build && yarn test && yarn build && mkdir -p releases && cd build && zip -r ../releases/release.zip ."
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "typescript": "^4.4.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "node-sass": "^5.0.0",
    "prettier": "^2.4.1"
  }
}
